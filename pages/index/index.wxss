

.container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--main-bg-color);
  overflow: hidden;
}

.main-wrap {
  flex-grow: 1;
  position: relative;
  /* border-radius: 0 0 48rpx 48rpx; */
  overflow: hidden;
  /* box-shadow: 0 2rpx 20px #333; */
}

.main-panel {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/* 切换动画 */
.panel-enter-active-class,
.panel-leave-active-class {
  transition-property: background-color, transform;
}

.panel-enter-class,
.panel-leave-to-class {
  background-color: red;
  transform: rotate(-360deg) translate3d(-100%, -100%, 0);
}