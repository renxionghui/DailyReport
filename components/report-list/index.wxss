.report-list-wrap{
  height: 100%;
}

.list-title{
  text-align: center;
  position: relative;
  background-color: var(--primary-text); 
  padding: 24rpx;
}

.title-text{
  font-weight: 500;
  font-size: 40rpx;
  color: #fff;
  text-shadow: 0 0 2px #fff;
}

.title-detail{
  font-size: 24rpx;
  color: #eee;
  margin: 12rpx;
}

.title-detail .detail-text{
  margin:0 24rpx;
}

.list-swiper-wrap{
  height: calc(100% - 180rpx);
  position: relative;
  box-sizing: border-box;
}

.list-swiper{
  height: 100%
}

.report-primary-wrap{
  height: 100%;
  background-color: transparent;
  position: relative;
  padding: 16rpx;
  box-sizing: border-box;
}

.report-list{
  height: 100%;
  overflow-y:scroll;
  position: relative;
  z-index: 2;
}

.report-secondary-wrap{
  height: 100%;
  background-color: transparent;
  position: relative;
  margin: 0 6rpx;
  box-sizing: border-box;
}

.blur-wrap::after{
  content: '';
  position: absolute;
  top:12rpx;
  left:12rpx;
  right:12rpx;
  bottom: 12rpx;
  border-radius: 32rpx;
  background-image: linear-gradient(90deg,rgba(255, 255, 255, 0.2),rgba(255, 2555, 255, .4),rgba(255, 255, 255, .2));
  box-shadow: var(--outside-shadow);
}

.report-count{
  font-weight: 700;
  font-size: 36rpx;
  line-height: 112rpx;
  margin: 12rpx 0;
  width: 112rpx;
  height: 112rpx;
  position: absolute;
  text-align: center;
  z-index: 9999;
  top: -64rpx;
  left: -4rpx;
}

.report-count .count-text{
  position: relative;
  z-index: 2;
  color: var(--primary-text);
}
.report-count::before{
  content: '';
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 16rpx;
  left: 16rpx;
  background-color: var(--box-bg-color);
  transform: rotate(45deg);
  border-radius: 24rpx;
  box-shadow: var(--inside-shadow);
}

.report-item{
  color: var(--primary-text);
  display: flex;
  margin: 24rpx;
  align-items: center;
}

.report-item-order{
  width: 48rpx;
  height: 48rpx;
  padding: 8rpx;
  font-size: 32rpx;
  /* background-color: #409eff; */
  text-align: center;
  line-height: 48rpx;
  background-color: var(--box-bg-color);
  box-shadow: var(--outside-shadow);
  border-radius: 50%;
  margin:0 12rpx;
}

.report-item-title{
  flex-grow: 1;
  height: 96rpx;
  line-height: 96rpx;
  margin-left: 12rpx;
  background-color: var(--box-bg-color);
  box-shadow: var(--outside-shadow);
  border-radius: 12rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  padding: 8rpx 24rpx;
}
