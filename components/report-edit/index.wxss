.report-edit-wrap {
  height: 100%;
  position: relative;
  --primary-text: #7B81BE;
  --secondary-text: #6B92E5;
  --cell-background-color: transparent;
  --delete-icon-size: 36rpx;
  --report-icon-size: 64rpx;
}

.report-edit-swiper {
  height: calc(100% - 24rpx);
}

.swiper-wrap {
  height: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 12rpx;
}

.edit-swiper-item {
  height: 100%;
  position: relative;
  box-sizing: border-box;
  border-radius: 36rpx;
  padding: 6rpx;
  margin: 0 6rpx;
  background-color: var(--box-bg-color);
}

.edit-swiper-title {
  border-radius: 36rpx 36rpx 0 0;
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--box-bg-color);
  padding: 36rpx 12rpx;
  position: relative;
}

.title-grap {
  width: 56rpx;
  height: 12rpx;
  border-radius: 6rpx;
  margin: 0 12rpx;
}
/* 主要任务 */
.bg-primary-grap {
  background-image: linear-gradient(#7B81BE, #C3CFED);
}

.color-primary {
  color: var(--primary-text);
}

/* 次要任务 */
.bg-secondary-grap {
  background-image: linear-gradient(#507ED5, #C3CFED);
}

.color-secondary {
  color: var(--secondary-text);
}

.title-text {
  font-weight: 700;
  font-size: 36rpx;
  padding: 24rpx;
  border-radius: 50%;
  line-height: 1em;
  box-shadow: 2px 2px 10px #999, -2px -2px 10px #fff;
}

.report-edit-list {
  width: 100%;
  height: calc(100% - 144rpx);
  overflow-y: scroll;
  margin: 0 6rpx;
  box-sizing: border-box;
  z-index: 3;
}

.blur-wrap::after {
  content: '';
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 36rpx;
  background-image: linear-gradient(90deg, rgba(255, 255, 255, .1), rgba(255, 2555, 255, .3), rgba(255, 255, 255, .1));
}

.edit-panel {
  margin: 24rpx 12rpx;
  display: flex;
}

.panel-content {
  flex-grow: 1;
  border-radius: 24rpx;
  padding: 12rpx;
}

.panel-index {
  margin-bottom: 12rpx;
  border-radius: 50%;
  padding: 8px;
  width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
}

.panel-index-text {
  font-size: 32rpx;

}

.panel-delete {
  width: var(--delete-icon-size);
  height: var(--delete-icon-size);
  padding: 12rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  margin-top: 12rpx;
}

.panel-delete-icon {
  width: var(--delete-icon-size);
  height: var(--delete-icon-size);
}

.report-edit-buttons {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  z-index: 5;
}

.report-button-wrap{
  width: var(--report-icon-size);
  height: var(--report-icon-size);
  border-radius: 50%;  
}

.report-button-wrap + .report-button-wrap{
  margin-top: 24rpx;
}

.report-button-icon {
  width: var(--report-icon-size);
  height: var(--report-icon-size);
}